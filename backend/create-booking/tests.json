{
  "tests": [
    {
      "name": "Version check",
      "method": "GET",
      "expectedStatus": 200,
      "expectedBody": {
        "version": "v5-debug-promotion"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create booking with promotion",
      "method": "POST",
      "body": {
        "name": "Тест Акция",
        "phone": "+79000000001",
        "service": "Диагностика",
        "promotion": "Скидка на диагностику 20%",
        "date": "2026-03-01",
        "time": "11:00",
        "comment": "Тест акции"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "promotion": "Скидка на диагностику 20%"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create booking with all fields",
      "method": "POST",
      "body": {
        "name": "Иван Петров",
        "phone": "+79991234567",
        "email": "ivan@example.com",
        "service": "Техническое обслуживание",
        "brand": "Toyota",
        "model": "Camry",
        "date": "2025-12-15",
        "time": "10:00",
        "comment": "Требуется замена масла"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create booking with minimum fields",
      "method": "POST",
      "body": {
        "name": "Мария Иванова",
        "phone": "+79167654321"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject booking without required fields",
      "method": "POST",
      "body": {
        "email": "test@example.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}