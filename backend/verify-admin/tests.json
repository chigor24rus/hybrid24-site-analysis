{
  "tests": [
    {
      "name": "Verify with correct credentials",
      "method": "POST",
      "body": {
        "login": "admin",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject incorrect credentials",
      "method": "POST",
      "body": {
        "login": "admin",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject empty login or password",
      "method": "POST",
      "body": {
        "login": "",
        "password": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject wrong login",
      "method": "POST",
      "body": {
        "login": "wronguser",
        "password": "admin123"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
}